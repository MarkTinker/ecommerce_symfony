{% trans_default_domain 'cocorico_listing' %}

{% include 'CocoricoCoreBundle:Frontend/Common:_flash.html.twig' %}
<!-- form-category -->

<div class="col-sm-2 col-xs-12 container-padding">
{{ form_start(form, {'attr': {'class': 'form-category alt col-xs-12'}}) }}

{{ form_errors(form) }}

<fieldset>
    <legend class="hidden">form-category</legend>
    <div class="form-holder">
        <div class="categories sidebar">
            <div class="sidebar">
                {{ form_widget(form.categories) }}
            </div>
        </div>        
    </div>

    <!-- range-area -->
    <div class="range-area">
        <!-- range-holder -->
        {{ form_widget(form.price_range) }}
    </div>

    <div class="selection-holder btn-block text-right">
        <button type="submit" class="btn btn-default" style="padding: 6px 14px 6px;">
            {{ 'listing.filter'|trans }}
        </button>
    </div>
    {% block form_search_filters %}
    {% endblock %}

</fieldset>

{{ form_end(form) }}
</div>