{% extends '::base.html.twig' %}

{%- block meta_title -%}
    {{ 'home.meta_title'|trans({}, 'cocorico_meta') ~ " - " ~ cocorico_site_name }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'home.meta_desc'|trans({}, 'cocorico_meta') }}
{%- endblock -%}

{% block theme %}home-page{% endblock %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'cocorico_home' %}

        {% block main %}
            <!-- Creating listing & Rent Section -->
            <div id="create_rent_section" class="row">
                <div class="col-md-4 col-md-offset-3 col-xs-12">
                    <h1 class="text-center">Your Ultimate <br/> Designer <br/> Collection</h1>
                </div>
                <div class="rent-box col-md-4 col-md-offset-1 col-xs-12">
                    <h2 class="text-center">Rotate your closet every month <br/> by renting from designer closets <br/> across Australia at affordable prices</h2>
                    <div class="row text-center">
                        <a href="" class="text-center color-pink"> RENT NOW </a>
                    </div>
                    <div class="row text-center">
                        <a href="" class="text-center color-pink"> CREATE A LISTING </a>
                    </div>
                </div>
            </div>

            <div id="trend_thismonth" class="row section">
                <div class="container">
                    <div class="title-container">
                        <h1 class="text-center color-pink"><span>ON TREND <br/> THIS MONTH</span></h1>
                    </div>
                    <div class="content-container">
                        <div class="row">
                            <div id="trend1" class="trend col-md-4">
                                <img src="{{ asset('images/home/trending1.png')}}">
                                <p class="trend-title text-center">Colours that POP!</p>
                                <p class="trend-description text-center">The secret to staying provocative and youthful.</p>
                            </div>
                            <div id="trend2" class="trend col-md-4">
                                <p class="trend-title text-center">Colours that POP!</p>
                                <p class="trend-description text-center">The secret to staying provocative and youthful.</p>
                            </div>
                        </div>
                        <div class="row">
                        </div>
                    </div>
                </div>

            </div>

            <!-- infoarea -->
            <div class="infoarea container">
                <div class="row">
                    <!-- info-box -->
                    <div class="col-xs-12 col-sm-6 col-md-4 info-box">
                        <img src="{{ asset('images/icon1.png') }}" alt="icon description" class="pull-left icon">

                        <div class="textbox">
                            <h2><a href="#">Lorem ipsum dolor sit amet, consectetur adipiscing.</a></h2>

                            <p>
                                Mipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt ut
                                labore.
                            </p>
                        </div>
                    </div>
                    <!-- info-box -->
                    <div class="col-xs-12 col-sm-6 col-md-4 info-box">
                        <img src="{{ asset('images/icon2.png') }}" alt="icon description" class="pull-left icon">

                        <div class="textbox">
                            <h2><a href="#">Lorem ipsum dolor sit amet ?</a></h2>

                            <p>
                                Mipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt ut
                                labore.
                            </p>
                        </div>
                    </div>
                    <div class="clearfix visible-sm"></div>
                    <!-- info-box -->
                    <div class="col-xs-12 col-sm-6 col-md-4 info-box">
                        <img src="{{ asset('images/icon3.png') }}" alt="icon description" class="pull-left icon">

                        <div class="textbox">
                            <h2><a href="#">Lorem ipsum dolor sit amet, consect</a></h2>

                            <p>
                                Mipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt ut
                                labore.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            {% include 'CocoricoCoreBundle:Frontend/Home:high_rank.html.twig'  with {
            'listings': listings
            } only %}

        {% endblock %}
        {% block modal %}
            {% include 'CocoricoCoreBundle:Frontend/Common:_modal.html.twig' only %}
        {% endblock %}
    {% endembed %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {#Geocoding #}
    {% include '@CocoricoCore/Frontend/ListingResult/js/_geocoding_js.html.twig' with {
    'map_elt': '',
    'auto_complete_elt': '#location'
    } only %}

    <script>
        // Categories
        $(function () {

            // Set default favourites in the listing
            setDefaultFavourites();

            initMultiSelect(
                    '#categories',
                    '{{ "multiselect.all_selected"|trans({}, "cocorico") }}',
                    '{{ "multiselect.none_selected"|trans({}, "cocorico") }}',
                    '{{ "multiselect.num_selected"|trans({}, "cocorico") }}',
                    '250px'
            );
        });
    </script>
{% endblock %}

{% block markup_jsonld %}
    {{ parent() }}

    {% include '@CocoricoSeo/Frontend/Home/_index_markup.jsonld.twig' ignore missing with {
    'listings': listings
    } only %}
{% endblock %}
